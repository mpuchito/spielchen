.app-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
  flex-wrap: wrap;
  position: relative;
}

.language-corner {
  display: flex;
  gap: 10px;
}

.main-title {
  font-size: 2rem;
  margin: 10px auto;
}

@media (max-width: 600px) {
  .app-header {
    flex-direction: column;
    align-items: center;
  }

  .language-corner {
    order: 2;
    margin-top: 10px;
  }

  .main-title {
    order: 1;
    font-size: 1.6rem;
    text-align: center;
  }
}
