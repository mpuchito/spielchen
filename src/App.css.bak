.App {
  text-align: center;
  padding: 2rem;
  background-color: #f4f4f4;
  min-height: 100vh;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.app-header {
  position: relative;
  margin-bottom: 3rem;
}

.main-title {
  font-size: 2.8rem;
  font-weight: bold;
  margin: 0 auto;
}

.language-corner {
  position: absolute;
  top: 0.5rem;
  right: 0.5rem;
  display: flex;
  gap: 0.3rem;
}

.menu-grid {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  align-items: center;
}

.menu-btn {
  padding: 0.8rem 1.5rem;
  font-size: 1.2rem;
  background-color: #007bff;
  color: white;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  width: 200px;
  transition: background-color 0.3s;
}

.menu-btn:hover {
  background-color: #0056b3;
}
