/* Reset mínimo y bloqueo de scroll global */
*,
*::before,
*::after { box-sizing: border-box; }

html, body {
  margin: 0;
  height: 100%;
  overscroll-behavior: none;
  -webkit-text-size-adjust: 100%;
}

body { overflow: hidden; background:#fff; }

/* Fija la app al viewport, sin desplazamiento */
#root {
  position: fixed;
  inset: 0;
  display: flex;
}

/* La App rellena ancho/alto reales del iPhone */
.App {
  flex: 1;
  width: 100vw;
  min-height: 100svh;         /* iOS/Android modernos */
  height: -webkit-fill-available; /* fallback iOS */
  display: flex;
  flex-direction: column;
  overflow: hidden;
  padding-left: env(safe-area-inset-left);
  padding-right: env(safe-area-inset-right);
  padding-bottom: env(safe-area-inset-bottom);
}

/* Header siempre a 100% de ancho, sin “encogerse” */
.app-header {
  width: 100%;
  box-sizing: border-box;
  flex: 0 0 auto;
}

/* Zona que SÍ puede scrollear si hace falta */
.scroll-area {
  flex: 1 1 auto;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}
