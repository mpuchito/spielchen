:root{
  --bg:#f4f5f7;
  --card:#ffffff;
  --text:#0f172a;
  --muted:#64748b;
  --primary:#2563eb;
  --primary-600:#1d4ed8;
  --ring: rgba(37,99,235,.25);
  --shadow: 0 10px 20px rgba(2,8,23,.08), 0 2px 6px rgba(2,8,23,.06);
}

*{box-sizing:border-box}

.game-shell{
  min-height:100vh;
  background:var(--bg);
  color:var(--text);
  display:flex;
  flex-direction:column;
}

/* Top bar */
.game-topbar{
  position:sticky; top:0;
  display:grid;
  grid-template-columns:auto 1fr auto;
  align-items:center;
  gap:12px;
  padding:14px 20px;
  background:#f9fafb; /* gris muy claro */
  border-bottom:1px solid #e5e7eb;
  z-index:10;
}
.brand{
  margin:0; text-align:center; font-size:18px; font-weight:700; color:var(--muted);
}
.spacer{width:96px} /* ancho aprox de back button para centrar el título */

/* Generic button */
.btn{
  display:inline-flex; align-items:center; gap:8px;
  padding:10px 14px;
  border-radius:10px;
  border:1px solid #e5e7eb;
  background:#fff;
  color:var(--text);
  text-decoration:none;
  font-weight:600;
  box-shadow:0 1px 0 rgba(2,8,23,.04);
  transition:transform .05s ease, box-shadow .2s ease, border-color .2s ease;
}
.btn:hover{ transform:translateY(-1px); box-shadow:var(--shadow); border-color:#d1d5db; }
.btn:active{ transform:translateY(0); }
.btn:focus-visible{ outline:0; box-shadow:0 0 0 4px var(--ring); }

/* Back button accent */
.back-btn{
  background: var(--primary);
  color: #fff;
  border-color: var(--primary);
}
.back-btn:hover{
  background: var(--primary-600);
  border-color: var(--primary-600);
}
.back-btn .icon{
  font-size:16px;
  line-height:1;
}


/* Stage area */
.game-stage{
  flex:1;
  display:grid;
  place-items:center;
  padding:24px;
}

/* Card base (útil si tus pantallas ya usan un contenedor) */
.card{
  width:min(680px, 92vw);
  background:var(--card);
  border:1px solid #e5e7eb;
  border-radius:18px;
  box-shadow:var(--shadow);
  padding:28px;
}

/* Botón primario por si lo necesitas */
.btn-primary{
  background:var(--primary);
  color:#fff;
  border-color:transparent;
}
.btn-primary:hover{ background:var(--primary-600); box-shadow:var(--shadow); }
.btn-primary:focus-visible{ box-shadow:0 0 0 4px var(--ring); }
