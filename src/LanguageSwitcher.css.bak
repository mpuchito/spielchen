.flag-buttons {
  display: flex;
  position: absolute;
  top: 1rem;
  right: 1rem;
  gap: 0.5rem;
  z-index: 10;
}

.flag {
  width: 36px;
  height: 24px;
  border: 1px solid #333;
  cursor: pointer;
  border-radius: 2px;
  overflow: hidden;
  position: relative;
  box-shadow: 0 0 2px rgba(0, 0, 0, 0.4);
}

/* ðŸ‡©ðŸ‡ª German Flag */
.flag.de {
  background: linear-gradient(
    to bottom,
    black 33.33%,
    red 33.33% 66.66%,
    gold 66.66%
  );
}

/* ðŸ‡ºðŸ‡¸ USA-style Flag for English */
.flag.en {
  background: repeating-linear-gradient(
    to bottom,
    white,
    white 4px,
    red 4px,
    red 8px
  );
}

.flag.en::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 14px;
  height: 14px;
  background-color: navy;
}

.flag.en::after {
  content: 'âœ¶âœ¶';
  position: absolute;
  top: 1px;
  left: 2px;
  font-size: 8px;
  color: white;
}

/* ðŸ‡ªðŸ‡¸ Spanish Flag */
.flag.es {
  background: linear-gradient(
    to bottom,
    red 33.33%,
    yellow 33.33% 66.66%,
    red 66.66%
  );
}
