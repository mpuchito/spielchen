/* AVISO INLINE (no bloquea tablero) */
.popup{
  background-color:#f5f5f5;
  border:2px solid #ccc;
  padding:16px;
  text-align:center;
  margin:12px 0 20px;
  border-radius:12px;
  box-shadow:0 4px 12px rgba(0,0,0,.1);
  max-width:520px;
}

/* SOLO PARA MODAL REAL */
.popup-modal{
  position:fixed;
  inset:0;
  display:grid;
  place-items:center;
  background:rgba(2,8,23,.45);
  padding:16px;
  z-index:50;
}
.popup-modal .content{
  background:#f5f5f5;
  border:2px solid #ccc;
  border-radius:12px;
  box-shadow:0 4px 12px rgba(0,0,0,.1);
  padding:16px;
  width:min(520px,92vw);
  max-height:92svh;
  overflow:auto;
  -webkit-overflow-scrolling:touch;
  text-align:center;
}
