:root{
  --tile: 56px;
  --gap: 8px;
  --ok: #22c55e;
  --present: #facc15;
  --absent: #374151;
  --border: #d0d7de;
}

/* sin hueco entre tablero y teclado */
.wordle-root{
  display:flex;           /* antes grid */
  flex-direction:column;
  height:100%;
  overflow:hidden;
}
.wordle-board{
  flex:1 0 auto;
  display:grid;
  justify-content:center;
  align-content:end;      /* pega el tablero al teclado */
  gap:var(--gap);
  grid-auto-rows:var(--tile);
  padding-bottom:4px;
}


.wordle-row{
  display:grid;
  grid-template-columns: repeat(5, var(--tile));
  gap: var(--gap);
}
.wordle-cell{
  width: var(--tile);
  height: var(--tile);
  display:grid; place-items:center;
  border:1px solid var(--border);
  border-radius:10px;
  font-weight:700; font-size: calc(var(--tile) * 0.38);
  text-transform:uppercase; letter-spacing:1px;
  background:#fff; color:#111;
}
.wordle-cell.correct { background: var(--ok); color:#fff; border-color: var(--ok); }
.wordle-cell.present { background: var(--present); color:#111; border-color: var(--present); }
.wordle-cell.absent  { background: var(--absent); color:#fff; border-color: var(--absent); }
html.dark .wordle-cell.correct { background: var(--ok); color:#fff; border-color: var(--ok); }
html.dark .wordle-cell.present { background: var(--present); color:#111; border-color: var(--present); }
html.dark .wordle-cell.absent  { background: var(--absent); color:#fff; border-color: var(--absent); }



/* TECLADO iOS/desktop-safe */
.wordle-kbd{
  position: sticky;
  bottom: env(safe-area-inset-bottom);
  padding: 12px;
  padding-left: max(12px, env(safe-area-inset-left));
  padding-right: max(12px, env(safe-area-inset-right));
  padding-bottom: calc(env(safe-area-inset-bottom) + 12px);
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;              /* <- quita barras en desktop */
}

.kbd-rows{
  display: grid;
  gap: var(--kbd-gap, 8px);
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;              /* <- asegura sin scroll interno */
}

.kbd-row{
  display: flex;
  gap: var(--kbd-gap, 8px);
  justify-content: center;
  flex-wrap: nowrap;
  width: 100%;
  box-sizing: border-box;
  padding: 0 10px;
  overflow: hidden;              /* <- anti clipping Chrome */
}

.kbd-btn{
  min-width: 0;
  flex: 1 1 0.0001px;
  height: 48px;
  border-radius: 8px;
  border: 1px solid #e5e7eb;
  background: #e5e7eb;
  color: #111;
  font-weight: 700;
  cursor: pointer;
}
.kbd-btn.wide{ flex: 2 1 0.0001px; }

/* colores */
.kbd-btn.correct{ background: var(--ok); color:#fff; border-color: var(--ok); }
.kbd-btn.present{ background: var(--present); color:#111; border-color: var(--present); }
.kbd-btn.absent { background: var(--absent); color:#fff; border-color: var(--absent); }

/* input oculto para teclado físico */
.wordle-hidden-input{
  position:absolute; left:-9999px; width:1px; height:1px; opacity:0;
}

/* Botones genéricos */
.btn-primary{ background:#2563eb; color:#fff; padding:10px 16px; border-radius:10px; }
.btn-secondary{ background:#f3f4f6; color:#111; padding:10px 16px; border-radius:10px; }

/* Títulos / botones de Home */
.wordle-title{ text-align:center; font-size:2rem; font-weight:800; margin-bottom:1.5rem; }
.wordle-btn{ display:block; width:100%; max-width:280px; margin:0 auto 1rem; padding:18px 20px; font-size:20px; font-weight:600; border-radius:12px; text-align:center; }
.wordle-btn.primary{ background:#2563eb; color:#fff; }
.wordle-btn.secondary{ background:#3b82f6; color:#fff; }

/* Mensajes opcionales */
.wordle-msg{ margin-top:12px; padding:10px 12px; border-radius:8px; border:1px solid; }
.wordle-msg.ok{ background:#ecfdf5; border-color:#34d399; color:#065f46; }
.wordle-msg.error{ background:#fef2f2; border-color:#fca5a5; color:#7f1d1d; }

/* Dark mode */
html.dark .wordle-cell { background:#111827; color:#e5e7eb; border-color:#374151; }
html.dark .kbd-btn { background:#374151; color:#e5e7eb; border-color:#4b5563; }
html.dark .kbd-btn.absent{ background:#111827; border-color:#111827; color:#9ca3af; }
