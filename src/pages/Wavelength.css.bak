.wavelength-game,
.config-screen {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 1rem;
  font-family: sans-serif;
}

input {
  margin: 0.5rem;
  padding: 0.5rem;
  font-size: 1rem;
  width: 80%;
  max-width: 300px;
}

/* Botones generales */
button,
.btn {
  width: 100%;
  max-width: 300px;
  padding: 0.75rem 1.5rem;
  margin: 0.5rem auto;
  display: block;
  font-size: 1rem;
  border: none;
  background-color: #0077ff;
  color: white;
  border-radius: 0.5rem;
  cursor: pointer;
  transition: background-color 0.2s ease;
}

button:hover,
.btn:hover {
  background-color: #005fcc;
}

button:disabled,
.btn:disabled {
  background-color: gray;
  cursor: not-allowed;
}

/* Escala vertical del juego */
.scale {
  width: 100px;
  height: 380px;
  background: linear-gradient(to top, white, skyblue);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  border-radius: 10px;
  margin: 1rem 0;
  position: relative;
}

.zone {
  flex: 1;
  width: 100%;
  position: relative;
  cursor: pointer;
}

.zone.selected {
  background-color: rgba(255, 0, 0, 0.2);
}

.marker {
  position: absolute;
  height: 8px;
  border-radius: 4px;
}

/* Marcador correcto (visualmente rojo, dentro de escala) */
.marker.black {
  background-color: red;
  top: 50%;
  left: 0;
  right: 0;
  transform: translateY(-50%);
}

/* Marcador del jugador (visualmente negro, más ancho que la escala) */
.marker.red {
  background-color: black;
  bottom: 50%;
  transform: translateY(50%);
  width: 130px;         /* más ancho que la escala (100px) */
  left: -15px;          /* sobresale 15px por izquierda */
  right: auto;          /* evita conflicto con right: 0 */
}

/* Fila de botones */
.button-row {
  display: flex;
  justify-content: center;
  gap: 1rem;
  flex-wrap: wrap;
  margin-top: 1rem;
}

.button-row .btn {
  flex: 1;
  max-width: 200px;
}

.btn-primary {
  background-color: #004aad;
  color: white;
  font-weight: bold;
  border: none;
  border-radius: 0.5rem;
  padding: 0.75rem 1.5rem;
  font-size: 1.1rem;
  cursor: pointer;
  transition: background-color 0.3s ease;
  margin: 0.5rem auto;
  display: block;
  width: 100%;
  max-width: 300px;
}

.btn-primary:hover {
  background-color: #003080;
}

.btn-primary:disabled {
  background-color: #aaa;
  cursor: not-allowed;
}