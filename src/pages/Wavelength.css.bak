/* Wavelength.css — responsive y sin overflow */

/* Wrappers a pantalla completa sin crear scroll global */
.wavelength-game,
.config-screen {
  width: 100%;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 16px
           env(safe-area-inset-right)
           calc(16px + env(safe-area-inset-bottom))
           env(safe-area-inset-left);
  box-sizing: border-box;
  overflow: hidden;
  font-family: system-ui, -apple-system, Segoe UI, Roboto, sans-serif;
}

/* Inputs */
input {
  margin: 8px 0;
  padding: 10px 12px;
  font-size: 1rem;
  width: 100%;
  max-width: 320px;
  border: 1px solid #d1d5db;
  border-radius: 10px;
  background: #fff;
}
input:focus { outline: 0; box-shadow: 0 0 0 4px rgba(37,99,235,.25); }

/* Botones */
button,
.btn {
  width: 100%;
  max-width: 320px;
  padding: 12px 16px;
  margin: 8px 0;
  display: block;
  font-size: 1rem;
  border: none;
  background: #0077ff;
  color: #fff;
  border-radius: 10px;
  cursor: pointer;
  transition: background-color .2s ease;
}
button:hover, .btn:hover { background: #005fcc; }
button:disabled, .btn:disabled { background: #9ca3af; cursor: not-allowed; }

/* Escala vertical: tamaño seguro en móvil */
:root{
  --scale-w: clamp(80px, 22vw, 120px);
  --scale-h: clamp(300px, 58svh, 420px);
}
.scale {
  width: var(--scale-w);
  height: var(--scale-h);
  background: linear-gradient(to top, #ffffff, #87ceeb);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  border-radius: 12px;
  margin: 12px 0 0;
  position: relative;
  overflow: hidden; /* evita fugas visuales */
}

.zone {
  flex: 1;
  width: 100%;
  position: relative;
  cursor: pointer;
}
.zone.selected { background-color: rgba(255, 0, 0, 0.2); }

.marker {
  position: absolute;
  height: 8px;
  border-radius: 4px;
}

/* Marcador inicial: sobresale horizontalmente sin romper layout */
.marker.black {
  background: red;
  top: 50%;
  transform: translateY(-50%);
  width: calc(100% + 30px);
  left: -15px;
}

/* Marcador jugador: ocupa ancho interno */
.marker.red {
  background: #000;
  bottom: 50%;
  transform: translateY(50%);
  left: 0;
  right: 0;
  width: 100%;
}

/* Fila de botones */
.button-row {
  display: flex;
  justify-content: center;
  gap: 12px;
  flex-wrap: wrap;
  margin-top: 12px;
  width: 100%;
  max-width: 480px;
}
.button-row .btn { flex: 1 1 140px; max-width: 220px; }

/* Primario */
.btn-primary {
  background: #004aad;
  color: #fff;
  font-weight: 700;
  border-radius: 10px;
  padding: 12px 16px;
  font-size: 1.05rem;
  margin: 8px 0;
  width: 100%;
  max-width: 320px;
}
