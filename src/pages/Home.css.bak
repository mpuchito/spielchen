.home-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40px 20px;
}

.home-buttons {
  display: flex;
  flex-direction: column;
  gap: 12px;
  width: 100%;
  max-width: 280px;
}

.home-btn {
  display: block;
  padding: 12px;
  border-radius: 8px;
  text-align: center;
  font-weight: 600;
  text-decoration: none;
  background: #1666ff;
  color: white;
  transition: background 0.2s, transform 0.1s;
}

.home-btn:hover {
  background: #0d4ed8;
  transform: translateY(-2px);
}
